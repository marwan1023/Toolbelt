'{$STAMP BS2}
'{$PBASIC 2.5}

irDetectLeft VAR Bit
irDetectRight VAR Bit

FREQOUT 4, 2000, 3000

DEBUG CLS,
     "IR Detectors", CR,
     "Left  Right", CR,
     "----  ------"

DO
  FREQOUT 8, 1, 38500
  irDetectLeft = IN9

  FREQOUT 0, 1, 38500
  irDetectRight = IN2

  DEBUG CRSRXY, 2, 3, BIN1 irDetectLeft,
        CRSRXY, 9, 3, BIN1 irDetectRight

  PAUSE 100
LOOP